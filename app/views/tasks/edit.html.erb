<h1>Edit Task</h1>

  <%= form_for(@task) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :details %>
      <%= f.text_field :details %>

      <%= f.label :completed %>
      <%= f.text_field :completed %>

    <div class="btn">
      <% if @task.new_record? %>
        <%= f.submit 'Create!', :class=>"button" %>
      <% else %>
        <%= f.submit 'Update!',:class=>"button" %>
      <% end %>
      </div>
  <% end %>

  <%= link_to "Back to list", tasks_path, :class=> "link"  %>
